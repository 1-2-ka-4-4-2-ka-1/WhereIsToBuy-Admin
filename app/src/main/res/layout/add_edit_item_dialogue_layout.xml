<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="5dp"
    app:cardCornerRadius="20dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="369dp"
        android:layout_height="390dp">


        <EditText
            android:id="@+id/ed_new_item_unit"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/grey_edittext_layout"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_new_item_desc" />

        <EditText
            android:id="@+id/ed_new_item_rate"
            android:layout_width="147dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/grey_edittext_layout"
            android:ems="10"
            android:inputType="textPersonName|numberDecimal"
            android:maxLines="1"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/ed_new_item_desc" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="20dp"
            android:text="Desc:"
            app:layout_constraintEnd_toStartOf="@+id/ed_new_item_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="21dp"
            android:text="Rate:"
            app:layout_constraintEnd_toStartOf="@+id/ed_new_item_rate"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="10dp"
            android:text="Unit:"
            app:layout_constraintEnd_toStartOf="@+id/ed_new_item_unit"
            app:layout_constraintTop_toBottomOf="@+id/ed_new_item_desc" />

        <EditText
            android:id="@+id/ed_new_item_desc"
            android:layout_width="290dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/grey_edittext_layout"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLines="2"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_ok_dialogue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/button_layout_light"
            android:text="@android:string/ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_new_item_unit" />

        <Button
            android:id="@+id/btn_cancel_dialogue"
            android:layout_width="63dp"
            android:layout_height="40dp"
            android:layout_marginTop="141dp"
            android:layout_marginBottom="47dp"
            android:background="@drawable/button_layout_light"
            android:padding="2dp"
            android:text="@android:string/cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_ok_dialogue"
            app:layout_constraintHorizontal_bias="0.315"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_new_item_rate" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>